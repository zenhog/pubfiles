[include]
	path = ~/.config/gitrc
[color]
	ui = true
[core]
	editor = vim
	autocrlf = input
	pager = delta
[init]
	defaultBranch = master
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[interactive]
	diffFilter = delta
[alias]
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	dv = difftool -t vimdiff -y
	plog = log --all --graph --oneline --decorate
	se = !git rev-list --all | xargs git grep -F
	unstage = reset HEAD --
	cleanup = !dot cleanup
	remaster = !dot remaster
	sync = !dot pullpush
[delta]
	navigate = true
	side-by-side = true
	line-numbers = true
[diff]
	colorMoved = default
[diff "crypt"]
	textconv = cat
[filter "crypt"]
	clean = crypt encrypt
	smudge = crypt decrypt
	required
